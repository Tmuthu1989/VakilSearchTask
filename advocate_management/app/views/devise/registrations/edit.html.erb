<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Profile</h1>
  <a href="<%= root_path%>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-arrow-left fa-sm text-white-50"></i> Back</a>
</div>

<!-- Content Row -->
<div class="row">

  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-12 col-12 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="row">
            <div class="col-12">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
          </div>
          <%= render 'shared/user_fields', f: f%>
          <div class="row mt-3">
            <div class="col-12">
              <h5>Change Password</h5>              
            </div>
            <div class="col-12 col-md-6 form-group">
              <label for="">Password </label>
              <%= f.password_field :password, class: "form-control"%>
            </div>
            <div class="col-12 col-md-6 form-group">
              <label for="">Password Confirmation </label>
              <%= f.password_field :password_confirmation, class: "form-control"%>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-12 col-md-6 form-group">
              <label for="">Current Password <i>(we need your current password to confirm your changes)</i> <i class="fas fa-asterisk text-danger" style="font-size: 8px; top: -15px;"></i></label>
              <%= f.password_field :current_password, class: "form-control", required: true%>
            </div>
          </div>
          <div class="row">
            <div class="col-12 form-group text-center">
              <%= f.submit "Update Profile", class: "btn btn-success"%>
            </div>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
  <div class="col-xl-12 col-12 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <h3>Cancel My Account</h3>
        <div class="row">
          <div class="col-12">
            Are you not happy with our application?
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-danger", method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
