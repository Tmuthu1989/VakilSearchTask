<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Junior Lawyers</h1>
  <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-arrow-left fa-sm text-white-50"></i> Back</a>
</div>

<!-- Content Row -->
<div class="row">

  <!-- Earnings (Monthly) Card Example -->
  <div class="col-12 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row">
        	<div class="col-12 form-group">
        		<%= link_to new_junior_path, class: "btn btn-primary btn-sm float-right" do%>
        			<i class="fas fa-plus"></i> New Junior
        		<% end -%>
        	</div>
        	<div class="col-12 table-responsive">
        		<table class="table table-bordered table-striped">
        			<thead>
        				<tr>
        					<th>S.No</th>
        					<th>Junior Name</th>
        					<th>Advocate Reg. Number</th>
        					<th>Contact Details</th>
        					<th>Serving States</th>
        					<th>Action</th>
        				</tr>
        			</thead>
        			<tbody>
        				<%if @juniors.present?%>
                  <%@juniors.each_with_index do |junior, i|%>
                    <%= render 'juniors/junior_tr', sno: i+1, junior: junior%>
                  <% end -%>
                <%else%>
                  <%=render 'shared/no_records', colspan: 6%>
                <%end%>
        			</tbody>
        		</table>
        	</div>
        </div>
      </div>
    </div>
  </div>
</div>
