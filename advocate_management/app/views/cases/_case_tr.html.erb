<tr>
	<td><%= sno%></td>
	<td><%= case_obj.client_name%></td>
	<td><%= case_obj.number%></td>
	<td><%= case_obj.state.name%></td>
	<td width="25%">
		<%= link_to edit_case_path(case_obj), class: "btn btn-sm btn-warning" do%>
			<i class="fas fa-edit"></i> Edit
		<% end -%>
		<%if current_user.senior_lawyer?%>
			<%= link_to case_reject_path(case_obj), data: {confirm: "Are you sure you want to reject this case?"}, class: "btn btn-sm btn-danger" do%>
				<i class="fas fa-ban"></i> Reject
			<% end -%>
		<% end -%>
		<%= link_to case_path(case_obj), method: :delete, data: {confirm: "Are you sure you want to delete this case?"}, class: "btn btn-sm btn-danger" do%>
			<i class="fas fa-trash"></i> Delete
		<% end -%>
	</td>
</tr>